<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Pengaturan background warna putih -->
    <solid android:color="#FFFFFF" />

    <!-- Pengaturan border oranye -->
    <stroke
        android:width="2dp"
        android:color="#cccccc" />

    <!-- Pengaturan sudut melengkung -->
    <corners android:radius="10dp" />

    <!-- Padding di dalam rectangle -->
    <padding
        android:left="16dp"
        android:top="10dp"
        android:right="16dp"
        android:bottom="10dp" />
</shape>
